# Environment Configuration
ENVIRONMENT=development
DEBUG=false
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql+asyncpg://resume_roast_user:your-password@postgres:5432/resume_roast

# PostgreSQL Database Configuration
POSTGRES_DB=resume_roast
POSTGRES_USER=resume_roast_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST_AUTH_METHOD=trust

# LocalStack Configuration
SERVICES=s3,kms,secretsmanager
DATA_DIR=/var/lib/localstack/data
DOCKER_HOST=unix:///var/run/docker.sock

# Frontend Configuration
API_BASE_URL=http://backend:8000/api/v1

# AWS CLI Setup Configuration
AWS_ENDPOINT_URL=http://localstack:4566

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4
OPENAI_MAX_TOKENS=4000
RESUME_TOKEN_LIMIT=15000
JOB_DESCRIPTION_TOKEN_LIMIT=5000

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=resume-roast-pdfs
KMS_KEY_ID=your-kms-key-id

# Application Configuration
CORS_ORIGINS=["http://localhost:8080"]

# Agent Configuration
MEMORY_REFRESH_INTERVAL_HOURS=1
AGENT_MEMORY_MAX_ENTRIES=100

# Database Pool Configuration
DATABASE_POOL_SIZE=10
DATABASE_ECHO=false